        <div id="menu_add"> <!-- add form for food type-->
            <h3>Add Food Menu Item</h3>
            <form method="POST" action="/menu_add">
                <label for="menuItemAdd">Item</label>
                <input required type="text" name="menuItemAdd" id="menuItemAdd" placeholder="Item">

                <label for="itemPrice">Price</label>
                <input required type="number" step="0.05" min="0" name="menuItemPrice" id="itemPrice" placeholder="0.00">
                
                <label for="menuItemStartDate">Start Date For Which it is Available</label>
                <input required type="date" name="menuItemStartDate" id="menuItemStartDate">

                <label for="menuItemEndDate">End Date For Which it is Available</label>
                <input required type="date" name="menuItemEndDate" id="menuItemEndDate">

                <input type="submit" value="Add Menu Item">
            </form> <!--add multiple simultaneous add options-->
        </div>
        <div id="menu_add"> <!-- add form for food type-->
            <h3>Add Drink Menu Item</h3>
            <form method="POST" action="/drink_menu_add">
