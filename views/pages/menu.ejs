                <input required type="text" name="drinkMenuItemAdd" id="drinkMenuItemAdd" placeholder="Item">

                <label for="drinkItemPrice">Price</label>
                <input required type="number" step="0.05" min="0" name="drinkMenuItemPrice" id="drinkItemPrice" placeholder="0.00">
            

                <input type="submit" value="Add Drink Menu Item">
            </form> <!--add multiple simultaneous add options-->
        </div>
        <div id="menu_remove">
            <h3>Remove Food Menu Item For a Certain Date Range</h3>
            <form method="POST" action="/menu_remove">
                <label for="menuItemRemove">Item</label>
                
                <input required type="text" name="menuItemRemove" id="menuItemRemove" placeholder="Item">
                <label for="menuDateRemove">Date</label>
